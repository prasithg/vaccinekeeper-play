# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Vaccines
GET		/genericSchedule		    controllers.Vaccines.genericSchedule()


# Users
#Tried using the delete method but routeAndCall(fakeRequest(DELETE, "/delete") in callDeleteUser() does not delete
#FYI PUT doesn't seem to work either... could be something to do with JSON

GET		/users						controllers.Users.index()
POST	/register					controllers.Users.registerUser()
POST	/delete						controllers.Users.deleteUser()
POST	/update						controllers.Users.updateUser()


# Children
POST	/child						controllers.Children.addChild(_id: String)
GET		/child/:id					controllers.Children.getChild(id: String)
PUT		/child						controllers.Children.updateChild()
DELETE	/child/:childId				controllers.Children.deleteChild(childId: String, userId: String)

PUT		/schedule					controllers.Children.updateSchedule(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
