# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Vaccine controller
GET		/genericSchedule		    controllers.Vaccines.genericSchedule()


# Users controller
GET		/users						controllers.Users.index()

POST	/register					controllers.Users.registerUser()
#Tried using the delete method but routeAndCall(fakeRequest(DELETE, "/delete") in callDeleteUser() does not delete
#FYI PUT doesn't seem to work either
POST	/delete						controllers.Users.deleteUser()
POST	/update						controllers.Users.updateUser()


POST	/schedule					controllers.Users.updateSchedule()


#POST    /projects/:project/tasks	controllers.Tasks.add(project: Long, folder: String)

GET		/child/:id					controllers.Users.getChild(id: String)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
